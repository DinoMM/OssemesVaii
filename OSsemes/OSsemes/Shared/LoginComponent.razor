@using OSsemes.Data.Database;
@inject DataContext db;

<AuthorizeView Roles="Admin">
    @* pre admina *@
    <Authorized>
        <div class="dropdown dropstart">
            <button class="btn background-own-darkblue" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-list color-own-black"></i>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li class="dropdown-item txt-color-own">Prihlásený: @db.Users.Where(x => x.UserName == context.User.Identity.Name).First().Surname</li>
                <li>
                    <NavLink class="dropdown-item" href="" Match="NavLinkMatch.All">
                        <a class="nav-link txt-color-own txt-font-own txt-hover-bold">Správa Rezervácii </a>
                    </NavLink>
                </li>
                <li>
                    <NavLink class="dropdown-item" href="Identity/Account/Logout" Match="NavLinkMatch.All">
                        <a class="nav-link txt-color-own txt-font-own txt-hover-bold">Odlásiť </a>
                    </NavLink>
                </li>
            </ul>
        </div>
    </Authorized>
</AuthorizeView>

